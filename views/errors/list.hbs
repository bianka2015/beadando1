
{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Felvett tárgyak</h1>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Tárgy neve</th>
            <th>Tárgy kódja</th>
            <th>Kredit</th>
            <th>Leírás</th>
        </tr>   
    </thead>
    <tbody>
        {{#each errors}}
        <tr>
            <!-- <td>{date}}</td> -->
            <td>{{nev}}</td>
            <td>{{kod}}</td>
            <td>{{kredit}}</td>
            <td>{{leiras}}</td>
            <!-- <td>{{i}}</td> -->
            <!-- <td><a href="/errors/edit" class="btn btn-default">Tárgy szerkesztése</a></td> -->
             <td><a href="/errors/edit?id={{id}}" class="btn btn-default">Tárgy szerkesztése</a></td> 
             <td><a href="/errors/list?id={{id}}" class="btn btn-default">Tárgy törlése</a></td> 
           <!-- <td><span class="label label-{statusClass}}">{statusText}}</span></td>
            <td>{location}}</td>
            <td><span class="badge">{numberOfMessages}}</span> {description}}</td> -->
        </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/errors/new" class="btn btn-default">Új tárgy felvétele</a></p>
